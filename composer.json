{
	"name": "wikimedia/xmp-reader",
	"description": "Reader for XMP data containing properties relevant to images",
	"license": "GPL-2.0-or-later",
	"homepage": "https://www.mediawiki.org/wiki/XMPReader",
	"keywords": [
		"xmp",
		"exif",
		"iptc",
		"metadata",
		"parse"
	],
	"authors": [
		{
			"name": "Brian Wolff",
			"email": "bawolff+wn@gmail.com"
		}
	],
	"autoload": {
		"psr-4": {
			"Wikimedia\\XMPReader\\": "src/"
		}
	},
	"require": {
		"php": ">=7.2.9",
		"ext-iconv": "*",
		"ext-xml": "*",
		"wikimedia/at-ease": "2.0.0",
		"psr/log": "^1.0",
		"wikimedia/scoped-callback": "^1.0 || ^2.0 || ^3.0",
		"wikimedia/timestamp": "^1.0 || ^2.0 || ^3.0"
	},
	"require-dev": {
		"ext-exif": "*",
		"mediawiki/mediawiki-codesniffer": "33.0.0",
		"mediawiki/minus-x": "1.1.0",
		"ockcyp/covers-validator": "1.3.0",
		"php-parallel-lint/php-console-highlighter": "0.5.0",
		"php-parallel-lint/php-parallel-lint": "1.2.0",
		"phpunit/phpunit": "^8.5"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpunit",
			"covers-validator",
			"phpcs -sp",
			"minus-x check ."
		],
		"cover": "phpunit --coverage-html coverage",
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	}
}
